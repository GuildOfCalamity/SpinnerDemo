<Window
    x:Class="SpinnerDemo.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ctrl="clr-namespace:SpinnerDemo.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SpinnerDemo"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Spinner Demo"
    MinWidth="700"
    MinHeight="450"
    AllowsTransparency="True"
    Background="Transparent"
    FontFamily="Aptos"
    KeyUp="Window_KeyUp"
    Loaded="Window_Loaded"
    WindowStartupLocation="CenterScreen"
    WindowState="Normal"
    WindowStyle="None"
    mc:Ignorable="d">
    <Border
        x:Name="hostBorder"
        MinWidth="500"
        MinHeight="300"
        Margin="10"
        Padding="10"
        Background="{StaticResource MeteorBackgroundBrush}"
        BorderBrush="{StaticResource DefaultedBorderBrush}"
        BorderThickness="2"
        CornerRadius="5"
        MouseDown="Border_MouseDown">
        <Border.Effect>
            <DropShadowEffect
                BlurRadius="6"
                Direction="310"
                Opacity="0.5"
                ShadowDepth="6"
                Color="{StaticResource BackgroundDark}" />
        </Border.Effect>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <ctrl:Spinner
                Grid.Row="0"
                Grid.Column="0"
                Width="100"
                Height="100"
                Margin="-2"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                DotBrush="{StaticResource SnowBrushRadial}"
                DotCount="20"
                DotSize="12"
                RenderMode="AnimatePositions"
                RenderShape="Wave"
                WaveAmplitude="14"
                WaveDuration="1.1"
                WindAmplitude="1"
                WindFrequency="0.5" />

            <ctrl:Spinner
                Grid.Row="0"
                Grid.Column="1"
                Width="100"
                Height="100"
                Margin="-2"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                BounceCollisions="False"
                BounceLowOpacity="True"
                BounceSpeed="50"
                DotBrush="{StaticResource SnowBrushRadial}"
                DotCount="20"
                DotSize="12"
                LineBaseSpeed="150"
                LineLowOpacity="True"
                RenderMode="AnimatePositions"
                RenderShape="Wind"
                RingsAlternateOpacity="True"
                RingsAngleSpeed="1"
                RingsCount="4"
                RingsOutward="True"
                SnowBaseSpeed="50"
                SnowLowOpacity="False"
                WaveAmplitude="12"
                WaveDuration="1.1"
                WindAmplitude="1"
                WindFrequency="0.5" />

            <ctrl:Spinner
                Grid.Row="0"
                Grid.Column="2"
                Width="100"
                Height="100"
                Margin="-2"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                DotBrush="{StaticResource SnowBrushRadial}"
                DotCount="20"
                DotSize="12"
                RenderMode="AnimatePositions"
                RenderShape="Snow"
                RingsAlternateOpacity="True"
                RingsAngleSpeed="1"
                RingsCount="4"
                RingsOutward="True"
                SnowBaseSpeed="50"
                SnowLowOpacity="False"
                WindAmplitude="1"
                WindFrequency="0.9" />

            <ctrl:Spinner
                Grid.Row="1"
                Grid.Column="0"
                Width="100"
                Height="100"
                Margin="-2"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                DotBrush="{StaticResource SnowBrushRadial}"
                DotCount="20"
                DotSize="12"
                PulseAlternateOpacity="False"
                PulseCount="2"
                PulseLowOpacity="True"
                PulseRadiusFactor="2"
                PulseSpeed="6"
                RenderMode="AnimatePositions"
                RenderShape="Pulse" />

            <ctrl:Spinner
                Grid.Row="1"
                Grid.Column="1"
                MinWidth="100"
                MinHeight="100"
                Margin="-2"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                BounceCollisions="False"
                BounceLowOpacity="True"
                BounceSpeed="50"
                DotBrush="{StaticResource SnowBrushRadial}"
                DotCount="20"
                DotSize="12"
                RenderMode="AnimatePositions"
                RenderShape="Rings"
                RingsAlternateOpacity="True"
                RingsAngleSpeed="1.5"
                RingsCount="2"
                RingsOutward="True" />

            <ctrl:Spinner
                Grid.Row="1"
                Grid.Column="2"
                Width="120"
                Height="120"
                Margin="-2"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                BounceCollisions="False"
                BounceLowOpacity="True"
                BounceSpeed="50"
                DotBrush="{StaticResource SnowBrushRadial}"
                DotCount="20"
                DotSize="6"
                LineBaseSpeed="150"
                LineLowOpacity="True"
                PulseAlternateOpacity="False"
                PulseCount="2"
                PulseLowOpacity="True"
                PulseRadiusFactor="2"
                PulseSpeed="2"
                RenderMode="AnimatePositions"
                RenderShape="Space"
                RingsAlternateOpacity="True"
                RingsAngleSpeed="1"
                RingsCount="3"
                RingsOutward="True" />

            <ctrl:Spinner
                Grid.Row="0"
                Grid.Column="3"
                MinWidth="100"
                MinHeight="100"
                Margin="-2"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                DotBrush="{StaticResource SnowBrushRadial}"
                DotCount="30"
                DotSize="6"
                RenderMode="AnimatePositions"
                RenderShape="Spiral"
                SpiralArmCount="2"
                SpiralClockwise="False"
                SpiralDotSpacing="3"
                SpiralFadeOut="True"
                SpiralLowOpacity="False"
                SpiralRotationAngle="0.11"
                SpiralTwistDensity="0.61" />

            <ctrl:Spinner
                Grid.Row="2"
                Grid.Column="1"
                MinWidth="100"
                MinHeight="100"
                Margin="-2"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                DotBrush="{StaticResource SnowBrushRadial}"
                DotCount="40"
                DotSize="6"
                RenderMode="AnimatePositions"
                RenderShape="Spiral"
                SpiralArmCount="1"
                SpiralClockwise="False"
                SpiralDotSpacing="2"
                SpiralFadeOut="True"
                SpiralLowOpacity="False"
                SpiralRotationAngle="0.11"
                SpiralTwistDensity="0.4" />

            <ctrl:Spinner
                Grid.Row="1"
                Grid.Column="4"
                Width="120"
                Height="120"
                Margin="-2"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                BounceCollisions="False"
                BounceLowOpacity="True"
                BounceSpeed="50"
                DotBrush="{StaticResource SnowBrushRadial}"
                DotCount="20"
                DotSize="6"
                LineBaseSpeed="150"
                LineLowOpacity="True"
                PulseAlternateOpacity="False"
                PulseCount="2"
                PulseLowOpacity="True"
                PulseRadiusFactor="2"
                PulseSpeed="2"
                RenderMode="AnimatePositions"
                RenderShape="Stripe"
                StripeBaseSpeed="40"
                StripeLowOpacity="False"
                TwinkleSpeed="6"
                WaveAmplitude="12"
                WaveDuration="1.1"
                WindAmplitude="1"
                WindFrequency="0.5" />

            <ctrl:Spinner
                Grid.Row="2"
                Grid.Column="0"
                MinWidth="100"
                MinHeight="100"
                Margin="-2"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                BounceCollisions="False"
                BounceLowOpacity="True"
                BounceSpeed="50"
                DotBrush="{StaticResource SnowBrushRadial}"
                DotCount="20"
                DotSize="6"
                LineBaseSpeed="150"
                LineLowOpacity="True"
                PulseAlternateOpacity="False"
                PulseCount="2"
                PulseLowOpacity="True"
                PulseRadiusFactor="2"
                PulseSpeed="2"
                RenderMode="AnimatePositions"
                RenderShape="Worm"
                StripeBaseSpeed="40"
                StripeLowOpacity="False"
                WormAngularSpeed="90"
                WormInOutSpeed="0.7"
                WormMaxRadius="40" />

            <ctrl:Spinner
                Grid.Row="3"
                Grid.Column="0"
                Width="100"
                Height="100"
                Margin="3"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                DotBrush="{StaticResource SnowBrushRadial}"
                DotCount="40"
                DotSize="6"
                RenderMode="AnimatePositions"
                RenderShape="Square"
                SquareClockwise="True"
                SquareSize="100"
                SquareStep="2"
                StripeBaseSpeed="40"
                StripeLowOpacity="False" />

            <ctrl:Spinner
                Grid.Row="2"
                Grid.Column="4"
                Width="120"
                Height="120"
                Margin="-2"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                DotBrush="{StaticResource SnowBrushRadial}"
                DotCount="40"
                DotSize="5"
                PulseAlternateOpacity="False"
                PulseCount="2"
                PulseLowOpacity="True"
                PulseRadiusFactor="2"
                PulseSpeed="2"
                RenderMode="AnimatePositions"
                RenderShape="Twinkle1"
                TwinkleSpeed="8" />

            <ctrl:Spinner
                Grid.Row="2"
                Grid.RowSpan="1"
                Grid.Column="2"
                Width="140"
                Height="140"
                Margin="1"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                BounceCollisions="False"
                BounceLowOpacity="False"
                BounceSpeed="80"
                DotBrush="{StaticResource SnowBrushRadial}"
                DotCount="30"
                DotSize="12"
                RenderMode="AnimatePositions"
                RenderShape="Bounce" />

            <ctrl:Spinner
                Grid.Row="2"
                Grid.RowSpan="1"
                Grid.Column="3"
                Width="140"
                Height="140"
                Margin="1"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                BounceCollisions="True"
                BounceLowOpacity="False"
                BounceSpeed="20"
                DotBrush="{StaticResource SnowBrushRadial}"
                DotCount="30"
                DotSize="12"
                RenderMode="AnimatePositions"
                RenderShape="Bounce" />


            <ctrl:Spinner
                Grid.Row="1"
                Grid.RowSpan="1"
                Grid.Column="3"
                Width="120"
                Height="120"
                Margin="0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                BounceCollisions="False"
                BounceLowOpacity="True"
                BounceSpeed="50"
                DotBrush="{StaticResource SnowBrushRadial}"
                DotCount="30"
                DotSize="12"
                LineBaseSpeed="150"
                LineLowOpacity="False"
                RenderMode="AnimatePositions"
                RenderShape="Line" />

            <ctrl:Spinner
                Grid.Row="3"
                Grid.RowSpan="1"
                Grid.Column="3"
                Width="130"
                Height="130"
                Margin="0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                DotBrush="{StaticResource SnowBrushRadial}"
                DotCount="20"
                DotSize="10"
                RenderMode="AnimatePositions"
                RenderShape="Twinkle2"
                TwinkleSpeed="14" />

            <ctrl:Spinner
                Grid.Row="3"
                Grid.RowSpan="1"
                Grid.Column="1"
                Width="100"
                Height="100"
                Margin="0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                DotBrush="{StaticResource SnowBrushRadial}"
                DotCount="20"
                DotSize="9"
                RenderMode="AnimatePositions"
                RenderShape="Dots"
                WaveDuration="2" />

            <ctrl:Spinner
                Grid.Row="3"
                Grid.RowSpan="1"
                Grid.Column="2"
                Width="100"
                Height="100"
                Margin="0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                DotBrush="{StaticResource SnowBrushRadial}"
                DotCount="20"
                DotSize="12"
                RenderMode="AnimatePositions"
                RenderShape="Polys"
                WaveDuration="3" />


            <ctrl:Spinner
                Grid.Row="3"
                Grid.RowSpan="1"
                Grid.Column="4"
                Width="140"
                Height="140"
                Margin="-2"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                BounceCollisions="False"
                BounceLowOpacity="True"
                BounceSpeed="50"
                DotBrush="{StaticResource SnowBrushRadial}"
                DotCount="30"
                DotSize="12"
                LineBaseSpeed="150"
                LineLowOpacity="True"
                MeteorReduceLoad="False"
                MeteorShootChance="0.5"
                MeteorSpeed="3"
                MeteorSpread360="False"
                MeteorSpreadAngle="50"
                MeteorTrailColor="LightGray"
                MeteorTrailFactor="1.7"
                MeteorTrailLength="8"
                PulseAlternateOpacity="False"
                PulseCount="4"
                PulseLowOpacity="True"
                PulseRadiusFactor="2"
                PulseSpeed="1"
                RenderMode="AnimatePositions"
                RenderShape="Meteor1"
                RingsAlternateOpacity="True"
                RingsAngleSpeed="1"
                RingsCount="4"
                RingsOutward="True"
                SnowBaseSpeed="50"
                SnowLowOpacity="True" />

            <ctrl:Spinner
                Grid.Row="0"
                Grid.RowSpan="1"
                Grid.Column="4"
                Width="140"
                Height="140"
                Margin="-2"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                BounceCollisions="False"
                BounceLowOpacity="True"
                BounceSpeed="50"
                DotBrush="{StaticResource SnowBrushRadial}"
                DotCount="30"
                DotSize="12"
                LineBaseSpeed="150"
                LineLowOpacity="True"
                MeteorReduceLoad="False"
                MeteorShootChance="0.5"
                MeteorSpeed="3"
                MeteorSpread360="False"
                MeteorSpreadAngle="50"
                MeteorTrailColor="LightGray"
                MeteorTrailFactor="1.7"
                MeteorTrailLength="8"
                PulseAlternateOpacity="False"
                PulseCount="4"
                PulseLowOpacity="True"
                PulseRadiusFactor="2"
                PulseSpeed="1"
                RenderMode="AnimatePositions"
                RenderShape="Meteor2"
                RingsAlternateOpacity="True"
                RingsAngleSpeed="1"
                RingsCount="4"
                RingsOutward="True"
                SnowBaseSpeed="50"
                SnowLowOpacity="True"
                SpiralArmCount="3"
                SpiralClockwise="False"
                SpiralDotSpacing="5"
                SpiralFadeOut="True"
                SpiralLowOpacity="False"
                SpiralRotationAngle="0.11"
                SpiralTwistDensity="0.11"
                SquareClockwise="True"
                SquareSize="0"
                SquareStep="2"
                StripeBaseSpeed="40"
                StripeLowOpacity="True"
                TwinkleSpeed="6"
                WaveAmplitude="12"
                WaveDuration="1.1"
                WindAmplitude="1"
                WindFrequency="0.5" />

            <ctrl:Spinner
                Grid.Row="4"
                Grid.RowSpan="1"
                Grid.Column="0"
                Width="100"
                Height="100"
                Margin="0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                DotBrush="{StaticResource GeneralBrushRadial}"
                DotCount="50"
                DotSize="12"
                FallingAcceleration="True"
                FallingBaseSpeed="4"
                FallingFinishedPause="40"
                RenderMode="AnimatePositions"
                RenderShape="Falling" />

            <ctrl:Spinner
                Grid.Row="4"
                Grid.RowSpan="1"
                Grid.Column="1"
                Width="100"
                Height="100"
                Margin="0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                DotBrush="{StaticResource GeneralBrushRadial}"
                DotCount="50"
                DotSize="12"
                FallingAcceleration="False"
                FallingBaseSpeed="3"
                FallingFinishedPause="40"
                RenderMode="AnimatePositions"
                RenderShape="Falling" />

            <ctrl:Spinner
                Grid.Row="4"
                Grid.RowSpan="1"
                Grid.Column="2"
                Width="100"
                Height="100"
                Margin="0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                DotBrush="{StaticResource FountainBrushRadial}"
                DotCount="50"
                DotSize="8"
                FountainBaseSpeed="1"
                FountainFadeRate="1"
                FountainSpreadDegrees="20"
                RenderMode="AnimatePositions"
                RenderShape="Fountain" />

            <ctrl:Spinner
                Grid.Row="4"
                Grid.RowSpan="1"
                Grid.Column="3"
                Width="100"
                Height="100"
                Margin="0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                DotBrush="{StaticResource MeteorBrushRadial}"
                DotCount="30"
                DotSize="12"
                ExplosionBaseSpeed="1"
                ExplosionFadeGradually="False"
                ExplosionFinishedPause="30"
                RenderMode="AnimatePositions"
                RenderShape="Explode" />

            <ctrl:Spinner
                Grid.Row="4"
                Grid.RowSpan="1"
                Grid.Column="4"
                Width="100"
                Height="100"
                Margin="0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                DotBrush="{StaticResource MeteorBrushRadial}"
                DotCount="30"
                DotSize="12"
                ExplosionBaseSpeed="1"
                ExplosionFadeGradually="True"
                ExplosionFinishedPause="30"
                RenderMode="AnimatePositions"
                RenderShape="Explode" />

            <!--#region [Popup Dialog]-->
            <Grid
                Grid.Row="0"
                Grid.Column="1"
                Grid.ColumnSpan="3"
                Margin="1,30,1,1">
                <Popup
                    Name="mainPopup"
                    Width="400"
                    Height="80"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    AllowsTransparency="True"
                    Closed="mainPopup_Closed"
                    Opened="mainPopup_Opened"
                    Placement="Center"
                    PopupAnimation="Fade"
                    StaysOpen="True">
                    <Border
                        Background="#A0252525"
                        BorderBrush="#A0959595"
                        BorderThickness="2"
                        CornerRadius="4">
                        <Border.Effect>
                            <DropShadowEffect
                                BlurRadius="1"
                                Opacity="0.7"
                                ShadowDepth="1"
                                Color="DodgerBlue" />
                        </Border.Effect>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Image
                                Grid.Column="0"
                                Width="34"
                                Height="34"
                                Margin="12,0,0,0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                RenderOptions.BitmapScalingMode="Fant"
                                Source="/Assets/AppIcon.png" />
                            <TextBlock
                                Grid.Column="1"
                                Margin="15,0,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontSize="22"
                                Foreground="{StaticResource NormalBrush}"
                                Text="Press any key to close demo"
                                TextWrapping="Wrap">
                                <TextBlock.Effect>
                                    <DropShadowEffect
                                        BlurRadius="3"
                                        Opacity="0.8"
                                        ShadowDepth="4"
                                        Color="Black" />
                                </TextBlock.Effect>
                            </TextBlock>
                        </Grid>
                    </Border>
                </Popup>
            </Grid>
            <!--#endregion-->

        </Grid>
    </Border>
</Window>
