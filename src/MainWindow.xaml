<Window
    x:Class="SpinnerDemo.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ctrl="clr-namespace:SpinnerDemo.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SpinnerDemo"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Spinner Demo"
    MinWidth="700"
    MinHeight="450"
    AllowsTransparency="True"
    Background="Transparent"
    FontFamily="Aptos"
    KeyUp="Window_KeyUp"
    Loaded="Window_Loaded"
    Unloaded="Window_Unloaded"
    WindowStartupLocation="CenterScreen"
    WindowState="Normal"
    WindowStyle="None"
    mc:Ignorable="d">
    <!--
        NOTE: I've left borders around each spinner so that the visual separation
        is obvious, you'll want to remove the border in your final version.
    -->
    <Border
        x:Name="hostBorder"
        MinWidth="500"
        MinHeight="300"
        Margin="10"
        Padding="10"
        Background="{StaticResource MeteorBackgroundBrush}"
        BorderBrush="{StaticResource DefaultedBorderBrush}"
        BorderThickness="2"
        CornerRadius="5"
        MouseDown="Border_MouseDown">
        <Border.Effect>
            <DropShadowEffect
                BlurRadius="6"
                Direction="310"
                Opacity="0.5"
                ShadowDepth="6"
                Color="{StaticResource BackgroundDark}" />
        </Border.Effect>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  SineWave  -->
            <ctrl:Spinner
                Grid.Row="0"
                Grid.Column="0"
                Width="100"
                Height="100"
                Margin="-2"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                BorderBrush="{StaticResource SampleBorderBrush}"
                BorderThickness="1"
                DotBrush="{StaticResource SnowBrushRadial}"
                DotCount="20"
                DotSize="12"
                RenderMode="AnimatePositions"
                RenderShape="Wave"
                WaveAmplitude="14"
                WaveDuration="1.1"
                WindAmplitude="1"
                WindFrequency="0.5" />

            <!--  Wind  -->
            <ctrl:Spinner
                Grid.Row="0"
                Grid.Column="1"
                Width="100"
                Height="100"
                Margin="-2"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                BorderBrush="{StaticResource SampleBorderBrush}"
                BorderThickness="1"
                DotBrush="{StaticResource SnowBrushRadial}"
                DotCount="20"
                DotSize="12"
                LineBaseSpeed="150"
                LineLowOpacity="True"
                RenderMode="AnimatePositions"
                RenderShape="Wind"
                WaveAmplitude="12"
                WaveDuration="1.1"
                WindAmplitude="1"
                WindFrequency="0.5" />

            <!--  Snow  -->
            <ctrl:Spinner
                Grid.Row="0"
                Grid.Column="2"
                Width="100"
                Height="100"
                Margin="-2"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                BorderBrush="{StaticResource SampleBorderBrush}"
                BorderThickness="1"
                DotBrush="{StaticResource SnowBrushRadial}"
                DotCount="20"
                DotSize="12"
                RenderMode="AnimatePositions"
                RenderShape="Snow"
                RingsAlternateOpacity="True"
                SnowBaseSpeed="50"
                SnowLowOpacity="False"
                WindAmplitude="1"
                WindFrequency="0.9" />

            <!--  Pulse  -->
            <ctrl:Spinner
                Grid.Row="1"
                Grid.Column="0"
                Width="100"
                Height="100"
                Margin="-2"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                BorderBrush="{StaticResource SampleBorderBrush}"
                BorderThickness="1"
                DotBrush="{StaticResource SnowBrushRadial}"
                DotCount="20"
                DotSize="12"
                PulseAlternateOpacity="False"
                PulseCount="2"
                PulseLowOpacity="True"
                PulseRadiusFactor="2"
                PulseSpeed="6"
                RenderMode="AnimatePositions"
                RenderShape="Pulse" />

            <!--  Rings  -->
            <ctrl:Spinner
                Grid.Row="1"
                Grid.Column="1"
                Width="100"
                Height="100"
                Margin="-2"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                BorderBrush="{StaticResource SampleBorderBrush}"
                BorderThickness="1"
                DotBrush="{StaticResource SnowBrushRadial}"
                DotCount="20"
                DotSize="12"
                RenderMode="AnimatePositions"
                RenderShape="Rings"
                RingsAlternateOpacity="True"
                RingsAngleSpeed="1.5"
                RingsCount="2"
                RingsOutward="True" />

            <!--  Gears/Cogs  -->
            <ctrl:Spinner
                Grid.Row="1"
                Grid.Column="2"
                Width="100"
                Height="100"
                Margin="-2"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                BorderBrush="{StaticResource SampleBorderBrush}"
                BorderThickness="1"
                BounceCollisions="False"
                BounceLowOpacity="True"
                BounceSpeed="50"
                DotBrush="{StaticResource SnowBrushRadial}"
                DotCount="20"
                DotSize="6"
                GearCoreBrush="{StaticResource GearBrushRadial}"
                GearInnerSpacing="2"
                GearOutlineThickness="1"
                RenderMode="AnimatePositions"
                RenderShape="Gears"
                RingsAlternateOpacity="True"
                RingsAngleSpeed="1"
                RingsCount="3"
                RingsOutward="True" />

            <!--  Spiral  -->
            <ctrl:Spinner
                Grid.Row="0"
                Grid.Column="3"
                Width="100"
                Height="100"
                Margin="-2"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                BorderBrush="{StaticResource SampleBorderBrush}"
                BorderThickness="1"
                DotBrush="{StaticResource SnowBrushRadial}"
                DotCount="30"
                DotSize="6"
                RenderMode="AnimatePositions"
                RenderShape="Spiral"
                SpiralArmCount="2"
                SpiralClockwise="False"
                SpiralDotSpacing="3"
                SpiralFadeOut="True"
                SpiralLowOpacity="False"
                SpiralRotationAngle="0.11"
                SpiralTwistDensity="0.61" />

            <!--  Spiral (alt)  -->
            <ctrl:Spinner
                Grid.Row="2"
                Grid.Column="1"
                Width="100"
                Height="100"
                Margin="-2"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                BorderBrush="{StaticResource SampleBorderBrush}"
                BorderThickness="1"
                DotBrush="{StaticResource SnowBrushRadial}"
                DotCount="40"
                DotSize="6"
                RenderMode="AnimatePositions"
                RenderShape="Spiral"
                SpiralArmCount="1"
                SpiralClockwise="False"
                SpiralDotSpacing="2"
                SpiralFadeOut="True"
                SpiralLowOpacity="False"
                SpiralRotationAngle="0.11"
                SpiralTwistDensity="0.4" />

            <!--  Stripe  -->
            <ctrl:Spinner
                Grid.Row="1"
                Grid.Column="4"
                Width="100"
                Height="100"
                Margin="-2"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                BorderBrush="{StaticResource SampleBorderBrush}"
                BorderThickness="1"
                BounceCollisions="False"
                BounceLowOpacity="True"
                BounceSpeed="50"
                DotBrush="{StaticResource SnowBrushRadial}"
                DotCount="20"
                DotSize="6"
                RenderMode="AnimatePositions"
                RenderShape="Stripe"
                StripeBaseSpeed="40"
                StripeLowOpacity="False" />

            <!--  Worm  -->
            <ctrl:Spinner
                Grid.Row="2"
                Grid.Column="0"
                Width="100"
                Height="100"
                Margin="-2"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                BorderBrush="{StaticResource SampleBorderBrush}"
                BorderThickness="1"
                BounceCollisions="False"
                BounceLowOpacity="True"
                BounceSpeed="50"
                DotBrush="{StaticResource SnowBrushRadial}"
                DotCount="20"
                DotSize="6"
                RenderMode="AnimatePositions"
                RenderShape="Worm"
                StripeBaseSpeed="40"
                StripeLowOpacity="False"
                WormAngularSpeed="90"
                WormInOutSpeed="0.7"
                WormMaxRadius="40" />

            <!--  Square  -->
            <ctrl:Spinner
                Grid.Row="3"
                Grid.Column="0"
                Width="100"
                Height="100"
                Margin="3"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                BorderBrush="{StaticResource SampleBorderBrush}"
                BorderThickness="1"
                DotBrush="{StaticResource SnowBrushRadial}"
                DotCount="40"
                DotSize="6"
                RenderMode="AnimatePositions"
                RenderShape="Square"
                SquareClockwise="True"
                SquareSize="100"
                SquareStep="2" />

            <!--  Twinkle  -->
            <ctrl:Spinner
                Grid.Row="2"
                Grid.Column="2"
                Width="100"
                Height="100"
                Margin="-2"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                BorderBrush="{StaticResource SampleBorderBrush}"
                BorderThickness="1"
                DotBrush="{StaticResource SnowBrushRadial}"
                DotCount="40"
                DotSize="5"
                OceanBrush="{StaticResource OceanBrushLinear}"
                OceanOscillationSpeed="4.2"
                OceanRiseFallSpeed="8"
                OceanRiseFallTotal="10"
                OceanScrollSpeed="5"
                OceanWaveAmplitude="12"
                OceanWavelength="100"
                RenderMode="AnimatePositions"
                RenderShape="Ocean" />

            <!--  Sand  -->
            <ctrl:Spinner
                Grid.Row="2"
                Grid.RowSpan="1"
                Grid.Column="4"
                Width="100"
                Height="100"
                Margin="1"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                BorderBrush="{StaticResource SampleBorderBrush}"
                BorderThickness="1"
                DotBrush="{StaticResource SnowBrushRadial}"
                DotCount="6"
                DotSize="3"
                RenderMode="AnimatePositions"
                RenderShape="Sand"
                SandBrush="{StaticResource SandBrushLinear}"
                SandDynamicSlope="False"
                SandGravity="25"
                SandJitter="0"
                SandResetPercentage="80"
                SandSlope="0.1"
                SandSlopeMax="10.0"
                SandSlopeMin="0.1" />

            <!--  Bounce (collision detection)  -->
            <ctrl:Spinner
                Grid.Row="2"
                Grid.RowSpan="1"
                Grid.Column="3"
                Width="100"
                Height="100"
                Margin="1"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                BorderBrush="{StaticResource SampleBorderBrush}"
                BorderThickness="1"
                BounceCollisions="True"
                BounceLowOpacity="False"
                BounceSpeed="25"
                DotBrush="{StaticResource SnowBrushRadial}"
                DotCount="14"
                DotSize="12"
                RenderMode="AnimatePositions"
                RenderShape="Bounce" />

            <!--  Line  -->
            <ctrl:Spinner
                Grid.Row="1"
                Grid.RowSpan="1"
                Grid.Column="3"
                Width="100"
                Height="100"
                Margin="0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                BorderBrush="{StaticResource SampleBorderBrush}"
                BorderThickness="1"
                BounceCollisions="False"
                BounceLowOpacity="True"
                BounceSpeed="50"
                DotBrush="{StaticResource SnowBrushRadial}"
                DotCount="30"
                DotSize="12"
                LineBaseSpeed="150"
                LineLowOpacity="False"
                RenderMode="AnimatePositions"
                RenderShape="Line" />

            <!--  Twinkle  -->
            <ctrl:Spinner
                Grid.Row="3"
                Grid.RowSpan="1"
                Grid.Column="3"
                Width="100"
                Height="100"
                Margin="0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                BorderBrush="{StaticResource SampleBorderBrush}"
                BorderThickness="1"
                DotBrush="{StaticResource SnowBrushRadial}"
                DotCount="30"
                DotSize="10"
                RenderMode="AnimatePositions"
                RenderShape="Twinkle2"
                TwinkleSpeed="14" />

            <!--  Dots (basic)  -->
            <ctrl:Spinner
                Grid.Row="3"
                Grid.RowSpan="1"
                Grid.Column="1"
                Width="100"
                Height="100"
                Margin="0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                BorderBrush="{StaticResource SampleBorderBrush}"
                BorderThickness="1"
                DotBrush="{StaticResource SnowBrushRadial}"
                DotCount="20"
                DotSize="9"
                RenderMode="AnimatePositions"
                RenderShape="Dots"
                WaveDuration="2" />

            <!--  Polys (shape geometry)  -->
            <ctrl:Spinner
                Grid.Row="3"
                Grid.RowSpan="1"
                Grid.Column="2"
                Width="100"
                Height="100"
                Margin="0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                BorderBrush="{StaticResource SampleBorderBrush}"
                BorderThickness="1"
                DotBrush="{StaticResource SnowBrushRadial}"
                DotCount="12"
                DotSize="16"
                PolyName="star"
                PolyPointOutward="True"
                RenderMode="AnimatePositions"
                RenderShape="Polys"
                WaveDuration="3" />

            <!--  Fireworks  -->
            <ctrl:Spinner
                Grid.Row="3"
                Grid.RowSpan="1"
                Grid.Column="4"
                Width="100"
                Height="100"
                Margin="-2"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                BorderBrush="{StaticResource SampleBorderBrush}"
                BorderThickness="1"
                DotBrush="{StaticResource ProgressBrushRadial}"
                DotCount="3"
                DotSize="6"
                FireworkBaseSpeed="2.5"
                FireworkBrush1="{StaticResource FireworkBrushRadial1}"
                FireworkBrush2="{StaticResource FireworkBrushRadial2}"
                FireworkBrush3="{StaticResource FireworkBrushRadial3}"
                FireworkExplosionSpeed="1"
                FireworkGravity="1.4"
                FireworkLifetime="22"
                FireworkParticleCount="5"
                RenderMode="AnimatePositions"
                RenderShape="Fireworks" />

            <!--  Meteor  -->
            <ctrl:Spinner
                Grid.Row="0"
                Grid.RowSpan="1"
                Grid.Column="4"
                Width="100"
                Height="100"
                Margin="-2"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                BorderBrush="{StaticResource SampleBorderBrush}"
                BorderThickness="1"
                BounceCollisions="False"
                BounceLowOpacity="True"
                BounceSpeed="50"
                DotBrush="{StaticResource SnowBrushRadial}"
                DotCount="30"
                DotSize="12"
                LineBaseSpeed="150"
                LineLowOpacity="True"
                MeteorReduceLoad="False"
                MeteorShootChance="0.75"
                MeteorSpeed="3"
                MeteorSpread360="False"
                MeteorSpreadAngle="50"
                MeteorTrailColor="LightGray"
                MeteorTrailFactor="1.7"
                MeteorTrailLength="8"
                RenderMode="AnimatePositions"
                RenderShape="Meteor2" />

            <!--  Falling  -->
            <ctrl:Spinner
                Grid.Row="4"
                Grid.RowSpan="1"
                Grid.Column="0"
                Width="100"
                Height="100"
                Margin="0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                BorderBrush="{StaticResource SampleBorderBrush}"
                BorderThickness="1"
                DotBrush="{StaticResource GeneralBrushRadial}"
                DotCount="60"
                DotSize="10"
                FallingAcceleration="False"
                FallingAutoReverse="False"
                FallingBaseSpeed="2"
                FallingFinishedPause="30"
                FallingUp="False"
                RenderMode="AnimatePositions"
                RenderShape="Falling" />

            <!--  Falling (alt)  -->
            <ctrl:Spinner
                Grid.Row="4"
                Grid.RowSpan="1"
                Grid.Column="1"
                Width="100"
                Height="100"
                Margin="0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                BorderBrush="{StaticResource SampleBorderBrush}"
                BorderThickness="1"
                DotBrush="{StaticResource GeneralBrushRadial}"
                DotCount="80"
                DotSize="8"
                FallingAcceleration="True"
                FallingAutoReverse="True"
                FallingBaseSpeed="4"
                FallingFinishedPause="10"
                FallingScrambleX="False"
                FallingUp="False"
                RenderMode="AnimatePositions"
                RenderShape="Falling" />

            <!--  Fountain  -->
            <ctrl:Spinner
                Grid.Row="4"
                Grid.RowSpan="1"
                Grid.Column="2"
                Width="100"
                Height="100"
                Margin="0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                BorderBrush="{StaticResource SampleBorderBrush}"
                BorderThickness="1"
                DotBrush="{StaticResource FountainBrushRadial}"
                DotCount="50"
                DotSize="8"
                FountainBaseSpeed="2"
                FountainColorTransition="True"
                FountainColorTransitionEaseOut="True"
                FountainFadeRate="1"
                FountainFromBottom="True"
                FountainGravity="25"
                FountainSpreadDegrees="30"
                FountainTransitionEndColor="Purple"
                FountainTransitionMidColor="DodgerBlue"
                FountainTransitionStartColor="White"
                RenderMode="AnimatePositions"
                RenderShape="Fountain" />

            <!--  Fountain (alt)  -->
            <ctrl:Spinner
                Grid.Row="4"
                Grid.RowSpan="1"
                Grid.Column="3"
                Width="100"
                Height="100"
                Margin="0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                BorderBrush="{StaticResource SampleBorderBrush}"
                BorderThickness="1"
                DotBrush="{StaticResource FountainBrushRadial2}"
                DotCount="40"
                DotSize="8"
                FountainBaseSpeed="2"
                FountainColorPaletteFire="True"
                FountainColorTransition="True"
                FountainColorTransitionEaseOut="True"
                FountainFadeRate="2"
                FountainFromBottom="False"
                FountainGravity="1"
                FountainSpreadDegrees="20"
                FountainTransitionEndColor="#D01010"
                FountainTransitionMidColor="#F04010"
                FountainTransitionStartColor="White"
                RenderMode="AnimatePositions"
                RenderShape="Fountain" />

            <!--  Explode  -->
            <ctrl:Spinner
                Grid.Row="4"
                Grid.RowSpan="1"
                Grid.Column="4"
                Width="100"
                Height="100"
                Margin="0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                BorderBrush="{StaticResource SampleBorderBrush}"
                BorderThickness="1"
                DotBrush="{StaticResource MeteorBrushRadial}"
                DotCount="30"
                DotSize="10"
                ExplosionBaseSpeed="1"
                ExplosionFadeGradually="False"
                ExplosionFinishedPause="30"
                RenderMode="AnimatePositions"
                RenderShape="Explode" />

            <!-- Explode (expands past borders)
            <ctrl:Spinner
                Grid.Row="4"
                Grid.RowSpan="1"
                Grid.Column="4"
                Width="100"
                Height="100"
                Margin="0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                BorderBrush="{StaticResource SampleBorderBrush}"
                BorderThickness="1"
                DotBrush="{StaticResource MeteorBrushRadial}"
                DotCount="30"
                DotSize="10"
                ExplosionBaseSpeed="1"
                ExplosionFadeGradually="True"
                ExplosionFinishedPause="30"
                RenderMode="AnimatePositions"
                RenderShape="Explode" />
            -->

            <!--  Radar  -->
            <ctrl:Spinner
                Grid.Row="5"
                Grid.RowSpan="1"
                Grid.Column="0"
                Width="100"
                Height="100"
                Margin="0"
                BorderBrush="{StaticResource SampleBorderBrush}"
                BorderThickness="1"
                DotBrush="{StaticResource SnowBrushRadial}"
                DotCount="18"
                DotSize="4"
                RadarBeamBrush="{StaticResource RadarBrushLinear}"
                RadarBeamWidth="8"
                RadarBlipBrush="{StaticResource BlipBrushRadial}"
                RadarBlipsTravel="False"
                RadarExciteWidth="3"
                RadarRadius="0"
                RadarRingBlips="False"
                RadarSweepSpeed="9"
                RadarUseCone="True"
                RenderMode="AnimatePositions"
                RenderShape="Radar" />

            <!--  Progress  -->
            <ctrl:Spinner
                Grid.Row="5"
                Grid.RowSpan="1"
                Grid.Column="2"
                Width="100"
                Height="100"
                Margin="0"
                BorderBrush="{StaticResource SampleBorderBrush}"
                BorderThickness="1"
                DotBrush="{StaticResource ProgressBrushLinear}"
                DotCount="8"
                DotSize="12"
                ProgressHighlightWidth="2"
                ProgressIndeterminate="True"
                ProgressSpacing="11"
                ProgressSweepSpeed="17"
                RenderMode="AnimatePositions"
                RenderShape="Progress" />

            <!--  Splash  -->
            <ctrl:Spinner
                Grid.Row="5"
                Grid.RowSpan="1"
                Grid.Column="1"
                Width="100"
                Height="100"
                Margin="0"
                BorderBrush="{StaticResource SampleBorderBrush}"
                BorderThickness="1"
                DotBrush="{StaticResource SplashBrushRadial1}"
                DotCount="6"
                DotSize="5"
                RenderMode="AnimatePositions"
                RenderShape="Splash"
                SplashBaseCount="5"
                SplashBaseLife="5"
                SplashBaseSpeed="3"
                SplashBrush="{StaticResource SplashBrushRadial2}"
                SplashConeDegrees="70"
                SplashExplode="False"
                SplashGravity="25" />

            <!--  Chase  -->
            <ctrl:Spinner
                Grid.Row="5"
                Grid.RowSpan="1"
                Grid.Column="3"
                Width="100"
                Height="100"
                Margin="0"
                BorderBrush="{StaticResource SampleBorderBrush}"
                BorderThickness="1"
                ChaseClockwise="True"
                ChaseMode="2"
                ChasePulseSize="6"
                ChasePulseSpeed="4"
                ChaseRingRadius="0"
                ChaseTailLength="1"
                DotBrush="{StaticResource SnowBrushRadial}"
                DotCount="12"
                DotSize="6"
                RenderMode="AnimatePositions"
                RenderShape="Chase" />

            <!--  Chase (alt)  -->
            <ctrl:Spinner
                Grid.Row="5"
                Grid.RowSpan="1"
                Grid.Column="4"
                Width="100"
                Height="100"
                Margin="0"
                BorderBrush="{StaticResource SampleBorderBrush}"
                BorderThickness="1"
                ChaseClockwise="True"
                ChaseMode="4"
                ChasePulseSize="6"
                ChasePulseSpeed="3"
                ChaseRingRadius="0"
                ChaseTailLength="4"
                DotBrush="{StaticResource SnowBrushRadial}"
                DotCount="12"
                DotSize="6"
                RenderMode="AnimatePositions"
                RenderShape="Chase" />

            <!--#region [Popup Dialog]-->
            <Grid
                Grid.Row="0"
                Grid.Column="1"
                Grid.ColumnSpan="3"
                Margin="1,30,1,1">
                <Popup
                    Name="mainPopup"
                    Width="400"
                    Height="80"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    AllowsTransparency="True"
                    Closed="mainPopup_Closed"
                    Opened="mainPopup_Opened"
                    Placement="Center"
                    PopupAnimation="Fade"
                    StaysOpen="True">
                    <Border
                        Background="#A0252525"
                        BorderBrush="#A0959595"
                        BorderThickness="2"
                        CornerRadius="4">
                        <Border.Effect>
                            <DropShadowEffect
                                BlurRadius="1"
                                Opacity="0.7"
                                ShadowDepth="1"
                                Color="DodgerBlue" />
                        </Border.Effect>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Image
                                Grid.Column="0"
                                Width="34"
                                Height="34"
                                Margin="18,0,0,0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                RenderOptions.BitmapScalingMode="Fant"
                                Source="/Assets/AppIcon.png" />
                            <TextBlock
                                x:Name="tbPopup"
                                Grid.Column="1"
                                Margin="15,0,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontSize="22"
                                Foreground="{StaticResource NormalBrush}"
                                Text="Press any key to close demo"
                                TextWrapping="Wrap">
                                <TextBlock.Effect>
                                    <DropShadowEffect
                                        BlurRadius="3"
                                        Opacity="0.8"
                                        ShadowDepth="4"
                                        Color="Black" />
                                </TextBlock.Effect>
                            </TextBlock>
                        </Grid>
                    </Border>
                </Popup>
            </Grid>
            <!--#endregion-->

        </Grid>
    </Border>
</Window>
